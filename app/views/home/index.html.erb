<div class="row">
  <div class="col-lg-7 well">
    <%= form_for(@post) do |f| %>
        <div class="form-group">
          <%= f.label 'title' %><br>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label 'upload meme' %><br>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        <%= f.submit :post, class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>

<% @posts.each do |post| %>
    <div class="row">
      <div class="col-lg-7 well">
        <h3>
          <%= post.title %>
        </h3>
        <p>
          <%= image_tag(post.image_url) if post.image? %>
        </p>
        <!-- <p><%#= post.score %> points </p> -->
        <%#= render "likes/form", post: post%>
        <div class="like" id="<%= post.id %>">
          <%= render partial: 'posts/like', locals: {:@post => post}%>
        </div>
    </div>
    </div>
<% end %>
