<div class="row">
  <aside class="col-md-4 well well-sm">
    <section>
      <h1>
        <%= @user.email %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/user_stats' %>
    </section>
  </aside>
  <div class="col-md-8 well well-sm">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.posts.any? %>
        <h3>posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>